    mobileMenu.classList.toggle('hidden');
  });
</script>

<style>
  /* Estilo personalizado con efecto de gradiente predominantemente azul */
  .dropdown {
    position: absolute;
    left: 0;
    top: 100%;
    display: none;
    background: linear-gradient(135deg, #1a237e, #3949ab, #283593, #1e88e5); /* Tonos azules */
    background-size: 300% 300%;
    color: white;
    min-width: 200px; /* Ancho más elegante */
    border-radius: 12px; /* Bordes más redondeados */
    padding: 10px 0; /* Espaciado interno */
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.3); /* Sombra más pronunciada */
    z-index: 100;
    animation: gradient-animation 6s ease infinite; /* Animación más lenta */
  }

  .dropdown-item {
    display: block;
    padding: 12px 20px; /* Espaciado más amplio */
    font-size: 15px; /* Tamaño de fuente más grande */
    font-weight: 600; /* Negrita para mayor formalidad */
    color: white;
    text-decoration: none;
    transition: background 0.3s ease, transform 0.2s ease; /* Suaviza el hover */
  }

  .dropdown-item:hover {
    background: rgba(255, 255, 255, 0.15); /* Resalta con fondo translúcido */
    color: #e3f2fd; /* Cambia el texto a un azul más claro */
    transform: scale(1.05); /* Efecto de aumento sutil */
  }

  .group:hover .dropdown {
    display: block; /* Muestra el menú al pasar el cursor */
  }

  /* Animación del gradiente */
  @keyframes gradient-animation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
