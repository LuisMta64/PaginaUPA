---
import MensajeBaja from '../../assets/images/banners/MensajeBaja.jpg'
---
  <!-- component -->
<div class="relative w-screen h-[80vh] bg-slate-800 overflow-hidden">
  <input
    class="hidden peer/slider-c1 checkbox"
    type="radio"
    name="slider"
    id="slider-c1"
    checked
  />
  <input
    class="hidden peer/slider-c2 checkbox"
    type="radio"
    name="slider"
    id="slider-c2"
  />
  <input
    class="hidden peer/slider-c3 checkbox"
    type="radio"
    name="slider"
    id="slider-c3"
  />

  <div
    class="relative w-[300vw] h-[100%] flex transition-all duration-500 ease-in-out peer-checked/slider-c1:-left-0 peer-checked/slider-c2:-left-[100vw] peer-checked/slider-c3:-left-[200vw]"
  >
    <div class="relative w-full h-full flex bg-white gap-4 py-9 place-content-center">
      <img src={MensajeBaja.src} >
    </div>
    <div class="relative w-full h-full flex bg-white gap-4 py-9 place-content-center">

    </div>
    <div class="relative w-full h-full flex bg-white gap-4 py-9 place-content-center">
      
    </div>
  </div>

  <div
    class="absolute w-full flex justify-center gap-2 bottom-12 peer-[&_label:nth-of-type(1)]/slider-c1:peer-checked/slider-c1:opacity-100 peer-[&_label:nth-of-type(1)]/slider-c1:peer-checked/slider-c1:w-10 peer-[&_label:nth-of-type(2)]/slider-c2:peer-checked/slider-c2:opacity-100 peer-[&_label:nth-of-type(2)]/slider-c2:peer-checked/slider-c2:w-10 peer-[&_label:nth-of-type(3)]/slider-c3:peer-checked/slider-c3:opacity-100 peer-[&_label:nth-of-type(3)]/slider-c3:peer-checked/slider-c3:w-10"
  >
    <label
      class="block w-5 h-5 bg-gray-700 cursor-pointer opacity-50 z-10 transition-all duration-300 ease-in-out hover:scale-125 hover:opacity-100"
      for="slider-c1"
    >
    </label>
    <label
      class="block w-5 h-5 bg-gray-700 cursor-pointer opacity-50 z-10 transition-all duration-300 ease-in-out hover:scale-125 hover:opacity-100"
      for="slider-c2"
    >
    </label>
    <label
      class="block w-5 h-5 bg-gray-700 cursor-pointer opacity-50 z-10 transition-all duration-300 ease-in-out hover:scale-125 hover:opacity-100"
      for="slider-c3"
    >
    </label>
  </div>
</div>